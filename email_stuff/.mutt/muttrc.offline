 set imap_passive=yes

 # point to the appropriate directories
 set spoolfile=~/.mutt/message_cache/imaps\:kg314@ic.ac.uk@outlook.office365.com/INBOX/
 set folder=~/.mutt/message_cache/imaps\:kg314@ic.ac.uk@outlook.office365.com/