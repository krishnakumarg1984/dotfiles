# vim:filetype=msmtp
# Set default values for all following accounts.
defaults
auth           on
tls            on
logfile        ~/.msmtp.log

# ICAccount
account        ICAccount
host           outlook.office365.com
port           587
protocol       smtp
auth           on
from           kg314@ic.ac.uk
user           kg314@ic.ac.uk
passwordeval    "gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/dotfiles/email_stuff/msmtp_password.gpg"
tls on
tls_certcheck on
# tls_trust_file
tls_starttls on
tls_trust_file ~/dotfiles/email_stuff/digicert_global_root_ca.pem

# Set a default account
account default : ICAccount